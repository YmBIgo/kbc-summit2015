<% provide :title, "#{@speaker.name}の情報を編集する" %>
<aside class="bg-dark">
</aside>

<section class="container bg-brown text-section">
  <div class="text-center">
  <% @speakers.each do |speaker| %>
    <%= link_to "#{speaker.name}様", edit_speaker_path(speaker.id), :class => "btn btn-primary" %>　
  <% end %>
  <hr>
  <% @teams.each do |team| %>
      <%= link_to "#{team.name}", edit_team_path(team.id), :class => "btn btn-primary" %>　
  <% end %>
  <hr>
    <div class="row form">
      <%= form_for @speaker do |f| %>
        <h3><%= "#{@speaker.name}様" %></h3>
        <hr>
        <div class="form-group">
          <div>
            <%= f.label "登壇者名" %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <%= f.label "役職" %>
            <%= f.text_field :job, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <%= f.label "経歴" %>
            <%= f.text_area :carrier, :size => "30x10", :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <%= f.label "企業紹介" %>
            <%= f.text_area :introduce, :size => "30x10",:class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <%= f.label "メッセージ" %>
            <%= f.text_area :message, :size => "30x10",:class => "form-control" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "編集する",:class => 'btn btn-primary scroll-page' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<br>