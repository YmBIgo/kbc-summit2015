<% provide :title, "#{@team.name}の情報を編集する" %>
<aside class="bg-dark">
</aside>

<section class="container bg-brown text-section">
  <div class="text-center">
    <% @teams.each do |team| %>
      <%= link_to "#{team.name}", edit_team_path(team.id), :class => "btn btn-primary" %>　
    <% end %>
    <hr>
    <% @speakers.each do |speaker| %>
    <%= link_to "#{speaker.name}様", edit_speaker_path(speaker.id), :class => "btn btn-primary" %>　
    <% end %>
    <hr>
    <div class="row form">
      <%= form_for @team do |f| %>
        <h3><%= "#{@team.name}様" %></h3>
        <hr>
        <div class="form-group">
          <div>
            <%= f.label "チーム名" %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <%= f.label "事業概要" %>
            <%= f.text_area :text, :size => "30x10", :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <%= f.label "リーダー" %>
            <%= f.text_field :leader, :class => "form-control" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "編集する",:class => 'btn btn-primary scroll-page' %>
        </div>
      <% end %>
  </div>
</section>
<br>